@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    

    .header {
        background-color: #f1f1f1;
        text-align: center;
        padding: 20px;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

        .header h1 {
            margin: 0;
        }

    .button-container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin: 20px;
    }

    .button {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 20px;
        padding: 20px;
        color: white;
        justify-content: center;
        background-color: #2c3e50;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border-radius: 5px;
        width: 300px;
        height: 150px;
    }

        .button:hover {
            background-color: darkcyan;
        }

        .button i {
            font-size: 5vh;
            margin-bottom: 10px;
            color: white;
            width: 80%;
        }

        .button span {
            width: 100%;
            font-size: 4vh;
        }
</style>

<div class="header">
    <h1>Proyecto 1- Richard Víquez</h1>
    <div class="button-container">
        <a href="@Url.Action("Index", "Platos")" class="button">

            <span>Platos</span>
            <i class="fas fa-utensils"></i>
        </a>
        <a href="@Url.Action("Index", "Ventas")" class="button">

            <span>Ventas</span>
            <i class="fas fa-chart-line"></i>
        </a>
        <a href="@Url.Action("Index", "Reservas")" class="button">

            <span>Reservas</span>
            <i class="fas fa-calendar-alt"></i>
        </a>
    </div>
</div>

